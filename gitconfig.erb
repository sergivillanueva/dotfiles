[user]
	name = Sergi Villanueva
	email = sergi.villanueva@gmail.com
[alias]
	co = checkout
  msg = commit --allow-empty -m
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	excludesfile = /home/sergi/.gitignore
  editor = vim
[apply]
	whitespace = nowarn
[pull]
	default = tracking
[push]
	default = tracking
[github]
  user = sergivillanueva
  token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>
[branch]
	autosetuprebase = always
[merge]
  tool = custom
[mergetool "custom"]
  cmd=$EDITOR -d -g $LOCAL $MERGED $REMOTE
  keepbackup=false
  keeptemporaries=false
  trustexitcode=false
